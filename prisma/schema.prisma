generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  flatNo    String   @unique
  flatName  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Complaint {
  id          Int      @id @default(autoincrement())
  category    String
  description String
  flatNo      String
  imageUrl    String?
  status      String   @default("submitted")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WorkerXP {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  role      String
  xp        Int      @default(0)
  updatedAt DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int
  description String?
}
